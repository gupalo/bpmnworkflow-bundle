{% extends '@BpmnWorkflow/base.html.twig' %}

{% block body %}
    <h2>Workflow Process {{ item.id ? 'edit ' ~ item.name : 'create' }}</h2>
    {{ form_start(form) }}
    <div class="row">
        <div class="col-md-4">
            <div class="form-group">
                {{ form_widget(form.save) }}
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-4">
            <div class="row">
                <div class="col-md-12">{{ form_row(form.slug) }}</div>
                <div class="col-md-12">{{ form_row(form.name) }}</div>
                <div class="col-md-12">{{ form_row(form.xml) }}</div>
            </div>
        </div>
    </div>
    {{ form_end(form, {render_rest: false}) }}
{% endblock %}
