{% extends '@BpmnWorkflow/base.html.twig' %}

{% block body %}
<h2>Process List</h2>
<a href="{{ path('bpmn_process_create') }}" style="margin-top: 5px; float: right" class="btn btn-success">Create Process</a>
<div class="clearfix"></div>

<table class="table table-striped table-hover table-responsive-md table-sm dataTable"
       style="min-width: 20%">
    <thead class="thead-light">
    <tr>
        <th scope="col">Id</th>
        <th scope="col">Slug</th>
        <th scope="col">Name</th>
        <th scope="col">Created At</th>
        <th scope="col">Updated By</th>
        <th scope="col"></th>
        <th scope="col"></th>
    </tr>
    </thead>
    <tbody>
    {% for item in items %}
        <tr>
            <td class="text-nowrap">{{ item.id }}</td>
            <td class="text-nowrap">{{ item.slug }}</td>
            <td class="text-nowrap">{{ item.name }}</td>
            <td class="text-nowrap">{{ item.createdAt ? item.createdAt|date('Y-m-d H:i') : '-' }}</td>
            <td class="text-nowrap">{{ item.updatedAt ? item.updatedAt|date('Y-m-d H:i') : '-' }}</td>
            <td class="text-nowrap">
                <a style="float: right" href="{{ path('bpmn_process_edit', {'id' : item.id}) }}" class="btn btn-primary">Edit</a>
            </td>
            <td class="text-nowrap">
                <a style="float: right" href="{{ path('bpmn_process_delete', {'id' : item.id}) }}" class="btn btn-danger">Delete</a>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>
{% endblock %}
